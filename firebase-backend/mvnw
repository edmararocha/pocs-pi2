#!/bin/sh
# -----------------------------------------------------------------------------
# Maven Wrapper
# -----------------------------------------------------------------------------

MVNW_VERBOSE=

MVNW_CMD_LINE_ARGS="$@"

# Check for Java
java -version > /dev/null 2>&1
if [ $? -ne 0 ]; then
  echo "Java is not installed or not in your PATH."
  exit 1
fi

# Call Maven if installed
mvn $MVNW_CMD_LINE_ARGS
